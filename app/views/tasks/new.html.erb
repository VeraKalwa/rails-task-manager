<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css">

<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details %>

  <%= f.label :completed %>
  <%= f.check_box :completed %>

  <%= f.submit %>
<% end %>


<p><i class="fas fa-undo"></i> <%= link_to "Go back to list", "/tasks/" %></p>
